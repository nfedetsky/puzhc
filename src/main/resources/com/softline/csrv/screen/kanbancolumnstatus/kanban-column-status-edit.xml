<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:dynattr="http://jmix.io/schema/dynattr/ui"
        caption="msg://kanbanColumnStatusEdit.caption"
        focusComponent="form">
    <data>
        <instance id="kanbanColumnStatusDc"
                  class="com.softline.csrv.entity.KanbanColumnStatus">
            <fetchPlan extends="_base">
                <property name="kanbanColumn" fetchPlan="_base">
                    <property name="kanbanStatusList" fetchPlan="_base"/>
                </property>
                <property name="status" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <dynattr:dynamicAttributes/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="kanbanColumnStatusDc">
                <column width="350px">
                    <dateField id="startDateField" property="startDate"/>
                    <dateField id="endDateField" property="endDate"/>
                    <textField id="sortOrderField" property="sortOrder"/>
                    <entityPicker id="kanbanColumnField" property="kanbanColumn">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <entityPicker id="statusField" property="status">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
